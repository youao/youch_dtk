.list {
  position: relative;
}

.goods {
  position: absolute;
  top: 100%;
  left: -100%;
  border-radius: 8rpx;
  overflow: hidden;
  background-color: #fff;
  opacity: 0;
  z-index: -1;
  transition: top 1s, opacity 1s, zIndex 1s;
}
.goods.show {
  opacity: 1;
  z-index: 1;
}

.goods-img {
  width: 100%;
  overflow: hidden;
}

.goods-info {
  padding: 10rpx;
}

.goods-tip {
  font-size: 20rpx;
  line-height: 50rpx;
  color: #acacac;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  border: 1rpx solid #d2d2d2;
  padding: 0 10rpx;
  margin-right: 10rpx;
}

.goods-row {
  font-size: 24rpx;
}
.goods-row.price {
  color: #e83b47;
}
.goods-priceval {
  font-size: 36rpx;
  margin-right: 10rpx;
}