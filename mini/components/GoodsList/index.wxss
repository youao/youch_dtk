.list {
  position: relative;
}

.goods {
  position: absolute;
  top: 100%;
  left: -100%;
  border-radius: 8rpx;
  overflow: hidden;
  background-color: #fff;
  opacity: 0;
  z-index: -1;
  transition: top 1s, opacity 1s, zIndex 1s;
  box-shadow: 1rpx 1rpx 4rpx rgba(0, 0, 0, 0.1);
}

.goods.show {
  opacity: 1;
  z-index: 1;
}

.goods-img {
  width: 100%;
  overflow: hidden;
  position: relative;
}

.v-play {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: auto;
  background-color: rgba(0,0,0,0.5);
  border-radius: 50%;
  color: #fff;
  font-size: 44rpx;
  line-height: 100rpx;
  text-align: center;
}

.goods-info {
  padding: 12rpx 6rpx 6rpx 12rpx;
}

.goods-title {
  margin-bottom: 12rpx;
}

.goods-tip {
  display: inline-block;
  font-size: 20rpx;
  line-height: 32rpx;
  color: #acacac;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  border: 1rpx solid #d2d2d2;
  padding: 0 10rpx;
  margin-right: 10rpx;
}

.goods-quan-box {
  position: relative;
  overflow: hidden;
  margin-right: 10rpx;
}

.goods-quan {
  font-size: 20rpx;
  line-height: 1.5;
  color: #e83b47;
  background-color: #fef5f7;
  border-radius: 6rpx;
  border: 1rpx solid #e83b47;
  box-sizing: border-box;
  padding: 0 16rpx;
}

.goods-quan-dot {
  display: inline-block;
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  border: 1rpx solid #e83b47;
  position: absolute;
  top: 0;
  bottom: 0;
  margin: auto;
  left: -4rpx;
  background: #fff;
}

.goods-quan-dot.right {
  right: -4rpx;
  left: auto;
}

.goods-row {
  font-size: 24rpx;
  padding-bottom: 12rpx;
}

.goods-row.price {
  color: #e83b47;
  display: flex;
  align-items: center;
}

.goods-priceval {
  font-size: 36rpx;
  margin-right: 10rpx;
}

.iconfont.tmall {
  color: #ff0036;
}
.iconfont.jhs {
  color: #e61414;
}
.iconfont.tqg {
  color: #ff852a;
}